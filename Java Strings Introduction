import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        
        Scanner sc=new Scanner(System.in);
        String A=sc.next();
        String B=sc.next();
        
        //first line
        int sum = A.length() + B.length();
        
        //second line
        String comparison = A.compareTo(B) > 0 ? "Yes":"No";
        
        //third line
        String uppercaseA = A.substring(0, 1).toUpperCase() + A.substring(1);
        String uppercaseB = B.substring(0, 1).toUpperCase() + B.substring(1);
        String uppercase = (uppercaseA+" "+uppercaseB);
        
        
        //print here
        System.out.println(sum);
        System.out.println(comparison);
        System.out.println(uppercase);
        
        sc.close();
        
    }
}
